<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Greetings" Height="1000" Width="1500">
    <Grid Margin="-10,0,-9,-16">
        <TextBlock Height="139" Margin="461,116,511,0" TextWrapping="Wrap" Text="Select a message option and then choose the display button." VerticalAlignment="Top" RenderTransformOrigin="0.497,3.052" FontSize="20"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True"  HorizontalAlignment="Left" Margin="551,280,0,0" VerticalAlignment="Top" Height="60" Width="162" FontSize="20"/>
        <RadioButton x:Name="GoodByeButton" Content="Good Bye!" HorizontalAlignment="Left" Margin="857,280,0,0" VerticalAlignment="Top" Height="60" Width="151" RenderTransformOrigin="-0.322,0.462" FontSize="20"/>
        <Button Content="Display" HorizontalAlignment="Center" Height="47" Margin="0,453,0,0" VerticalAlignment="Top" Width="192" Click="Button_Click"/>

    </Grid>
</Window>
